{
    "AWSEBDockerrunVersion": 2,
    "containerDefenitions": [
        {
            "name": "client",
            "image": "rahavmatan/app2-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rahavmatan/app2-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "api",
            "image": "rahavmatan/app2-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "rahavmatan/app2-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "api"
            ]
        }
    ]
}